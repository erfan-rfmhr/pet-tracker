@page
@model IBT.Pages.loginModel
@{
    Layout = null;
}
<html lang="en" dir="ltr">
<head>
    <title>Integrity Building Testing</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Integrity Building Testing ">
    <meta name="keywords" content="Integrity Building Testing">
    <link rel="shortcut icon" href="~/assets/images/favicon.ico">

    <!-- BEGIN CSS -->
    <link href="~/assets/plugins/bootstrap/bootstrap5/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/plugins/simple-line-icons/css/simple-line-icons.min.css" rel="stylesheet">
    <link href="~/assets/plugins/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet">
    <link href="~/assets/plugins/paper-ripple/dist/paper-ripple.min.css" rel="stylesheet">
    <link href="~/assets/plugins/iCheck/skins/square/_all.css" rel="stylesheet">
    <link href="~/assets/css/style.css?v12" rel="stylesheet">
    <link href="~/assets/css/colors.css" rel="stylesheet">
    <!-- END CSS -->


</head>
<body class="fix-header active-ripple theme-blue">
    <!-- BEGIN LOEADING -->
    <div id="loader">
        <div class="spinner"></div>
    </div><!-- /loader -->
    <!-- END LOEADING -->
    <!-- BEGIN WRAPPER -->
    <div class="fixed-modal-bg"></div>
    <!--<a href="#" class="btn btn-info btn-icon btn-round btn-lg" id="toggle-dark-mode">
        <i class="icon-bulb"></i>
    </a>-->
    <div class="modal-page shadow">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12">
                    <div class="logo-con m-t-10 m-b-10">
                        <img src="~/assets/images/IBT-LOGO2.png" style="max-width:50%" class="dark-logo center-block img-responsive" alt="logo">

                    </div><!-- /.logo-con -->
                    <h1 class="text-center m-b-20 mt-3 text-white logoTitle">Integrity Building Testing</h1>
                    <h1 class="text-center m-b-20 mt-3 Welcome_h">Welcome</h1>
                    <hr>
                    <form id="form" class="m-t-30 m-b-30" method="POST" role="form">
                        @*<form id="form" asp-page-handler="Login" class="m-t-30 m-b-30" method="POST" role="form">*@
                        <div class="form-group ">
                            <label for="username" class="sr-only unselectable">Username</label>
                            <div class="input-group round">
                                <span class="input-group-addon">
                                    <i class="icon-user"></i>
                                </span>
                                <input type="hidden" asp-for="@Model.mybackUrl" />
                                <input id="username" asp-for="@Model.Username" class="form-control ltr text-right" type="text" required>
                            </div><!-- /.input-group -->
                        </div><!-- /.form-group -->
                        <div class="form-group">
                            <label for="password" class="sr-only unselectable">Password</label>
                            <div class="input-group round">
                                <span class="input-group-addon">
                                    <i class="icon-key"></i>
                                </span>
                                <input id="password" class="form-control ltr text-right" type="password" asp-for="@Model.Password" minlength="5" required>
                            </div><!-- /.input-group -->
                        </div><!-- /.form-group -->

                        <div class="form-group">


                            <div class="input-group round">
                                <div class="form-control" style="background-color:transparent;border:none">
                                    @*<label  class="d-block mt-3 unselectable"><input type="radio" checked="checked"  name="LoginType" value="1">Patient</label>
                                        <label  class="d-block mt-3 unselectable"><input type="radio" name="LoginType" value="2" >Medical Staff</label>*@
                                    <label class="mt-3 unselectable"><input type="radio"  name="LoginType" value="2">Customer</label>
                                    <label class="mt-3 unselectable ms-5"><input type="radio" checked="checked" name="LoginType" value="1">IBT Staff</label>
                                </div>


                            </div>
                        </div>


                        <p class="unselectable">
                            @*<button id="btnLogin" class="btn btn-info btn-round btn-block mt-5" type="submit">*@
                            <button id="btnLogin" class="btn btn-info btn-round btn-block mt-5" type="submit">
                                <!--<i class="icon-paper-plane font-lg"></i>-->
                                Login
                            </button>
                        </p>

                        <br />
                        <label id="lblErrorL" class="text-center text-capitalize error unselectable"> @Model.Msg</label>



                    </form>
                    <hr class="m-b-30 unselectable">
               
                    <a href="forget.html" class="btn btn-default btn-round btn-block m-b-10 d-none">
                        <i class="icon-refresh font-lg"></i>
                        Password Recovery
                    </a>

                </div><!-- /.col-md-12 -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div><!-- /.modal-page -->
    <!-- END WRAPPER -->
    <!-- BEGIN JS -->
    <script src="~/assets/plugins/jquery/dist/jquery-3.1.0.js"></script>
    <script src="~/assets/plugins/jquery-migrate/jquery-migrate-1.2.1.min.js"></script>
    <script src="~/assets/plugins/bootstrap/bootstrap5/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/plugins/paper-ripple/dist/PaperRipple.min.js"></script>
    <script src="~/assets/plugins/sweetalert2//dist/sweetalert2.min.js"></script>
    <script src="~/assets/plugins/iCheck/icheck.min.js"></script>
    <script src="~/assets/plugins/iCheck/icheck.min.js"></script>
    <script src="~/assets/plugins/jquery-validation/dist/jquery.validate.min.js"></script>
    <!--<script src="~/assets/plugins/jquery-validation/src/localization/messages_fa.js"></script>-->
    <script src="~/assets/js/core.js?v5"></script>

    <!-- BEGIN PAGE JAVASCRIPT -->
    <script src="~/assets/js/pages/login.js"></script>
    <!-- END PAGE JAVASCRIPT -->



    <script>

        let date = new Date().toUTCString().slice(0, 16);
        $(".dateToday").text(date);



        $("#btnLogin").click(function () {

            $('#lblErrorL').text("");
            //if ($('#form').valid()) {
            //    //window.location.href = "index";
            //    return false;
            //}
        });

    </script>

    <style>

        .unselectable {
            -webkit-touch-callout: none;
            -webkit-user-select: none;
            -khtml-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }
    </style>
</body>

</html>