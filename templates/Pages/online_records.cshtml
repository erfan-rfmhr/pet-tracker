@page
@model online_recordsModal
@{
    ViewData["Title"] = "Home page";
}

<div id="page-content">

    <div class="row">
        <!-- BEGIN BREADCRUMB -->
        <div class="col-md-12">
            <div class="breadcrumb-box border shadow">
                <ul class="breadcrumb">
                    <li>
                    <span style="cursor:pointer" id="ttlPage" onclick="return ResetCount()">Records</span>
                    
                    </li>
                </ul>
                <div class="breadcrumb-right">

                    <span class="dateToday">
                        Fri, 26 Aug 2022
                    </span>
                    <i class="icon-calendar"></i>
                </div><!-- /.breadcrumb-right -->
            </div><!-- /.breadcrumb-box -->
        </div><!-- /.col-md-12 -->
        <!-- END BREADCRUMB -->
    </div>

    <div id="gridUser" class="row justify-content-center">






        <div class=" col-lg-12  col-12">
            <div class="portlet box border shadow">

                <div class="portlet-body">

                    <div i class="table-responsive">

                        @*<button id="btnNewPatient" type="button" class="btn btn-sm btn-info btn-curve">
                                <i class="icon-plus"></i>
                                New
                            </button>*@
                        <table id="recordsDatatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    @*<th>UserName</th>*@
                                    <th>Id</th>
                                    <th>buildingId</th>
                                    <th>s_Id</th>
                                    <th>CustomerId</th>
                                    <th>Sensor</th>
                                    <th>LowLimit</th>
                                    <th>HighLimit</th>
                                    <th>Customer Name</th>
                                    <th>Building Name</th>
                                    <th>Sensor AliasName</th>
                                    <th>Sesnsor Type</th>
                                    <th>Value</th>
                                    <th>Date</th>
                                    <th>Time</th>

                                </tr>
                            </thead>
                        </table>
                    </div>

                </div>

            </div>
        </div>


    </div>



    <div id="recordModal" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false" tabindex="-1">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
                    <h4 id="recordModalTitle" class="modal-title">New Serial</h4>
                </div><!-- /.modal-header -->
                <div class="modal-body">
                    <input type="hidden" id="hfSensorId" />

                    <div class="row">


                        @*<div class="col-md-6 offset-md-3">
                        *@
                        <div class="col-md-6 col-12">

                            <div class="form-group">
                                <label>Sensor</label>
                                <div class="input-group">
                                    <select class="form-control select2 curve" id="cmbSensorT" style="width:100% !important">
                                        <option value="1">Temprature</option>
                                        <option value="2">Torsion</option>
                                        <option value="3">Failure</option>
                                        <option value="4">Wind Speed</option>
                                        <option value="5">Pressure</option>
                                        <option value="6">Strain</option>
                                        <option value="7">Bending</option>
                                        <option value="8">Camera</option>
                                    </select>
                                </div><!-- /.input-group -->
                            </div><!-- /.form-group -->
                        </div>

                        <div class="col-md-6 col-12">

                            <div class="form-group">
                                <label>Sensor</label>
                                <div class="input-group">
                                    <select class="form-control select2 curve" id="cmbCustomerName" style="width:100% !important">

                                        @*@{

                                                foreach (MyCustomer m in Model.myCoustomers)
                                                {

                                                    <option value=@m.Id>@m.UserName</option>
                                                }

                                            }*@


                                    </select>
                                </div><!-- /.input-group -->
                            </div><!-- /.form-group -->
                        </div>


                        @*  <div class="w-100 d-none d-md-block"></div>*@
                        <div class="col-md-6 col-12">
                            <div class="form-group">
                                <label>Serial</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Serial" id="txtSerial" required>
                                </div><!-- /.input-group -->
                            </div><!-- /.form-group -->
                        </div>

                        <div class="col-md-6 col-12">
                            <div class="form-group">
                                <label>Alias Name</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Alias Name" id="txtAliasName" required>
                                </div><!-- /.input-group -->
                            </div><!-- /.form-group -->
                        </div>

                        <div class="col-md-6 col-12">
                            <div class="form-group">
                                <label>Low Limit</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" placeholder="Low Limit" id="txtLowLimit">
                                </div><!-- /.input-group -->
                            </div><!-- /.form-group -->
                        </div>

                        <div class="col-md-6 col-12">
                            <div class="form-group">
                                <label>High Limit</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" placeholder="High Limit" id="txtHighLimit">
                                </div><!-- /.input-group -->
                            </div><!-- /.form-group -->
                        </div>

                    </div>
                </div><!-- /.modal-body -->
                <div class="modal-footer">


                    <button id="btnSensorSave" type="button" class="btn btn-success btn-curve">
                        <i class="icon-check"></i>
                        Save
                    </button>
                    <button id="btnSensorCancel" type="button" class="btn btn-danger btn-curve ms-2" data-bs-dismiss="modal">
                        Cancel
                        <i class="icon-close"></i>
                    </button>


                </div><!-- /.modal-footer -->
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->


</div><!-- /#page-content -->

<style>
    .error, .has-error + .help-block, .has-error .checkbox, .has-error .checkbox-inline, .has-error .control-label, .has-error .help-block, .has-error .radio, .has-error .radio-inline, .has-error.checkbox label, .has-error.checkbox-inline label, .has-error.radio label, .has-error.radio-inline label {
        color: #f55145;
    }
</style>

