@page
@model UsersModel
@{
    ViewData["Title"] = "Home page";
}

<div id="page-content">
    <div class="row">
        <!-- BEGIN BREADCRUMB -->
        <div class="col-md-12">
            <div class="breadcrumb-box border shadow">
                <ul class="breadcrumb">
                    <li><a id="ttlPage" href="#">Users</a></li>
                </ul>
                <div class="breadcrumb-right">

                    <span class="dateToday">
                        Fri, 26 Aug 2022
                    </span>
                    <i class="icon-calendar"></i>
                </div><!-- /.breadcrumb-right -->
            </div><!-- /.breadcrumb-box -->
        </div><!-- /.col-md-12 -->
        <!-- END BREADCRUMB -->
    </div>

    <div id="gridUser" class="row justify-content-center">






        <div class=" col-lg-10  col-12">
            <div class="portlet box border shadow">

                <div class="portlet-body">

                    <div i class="table-responsive">

                        @*<button id="btnNewPatient" type="button" class="btn btn-sm btn-info btn-curve">
                                <i class="icon-plus"></i>
                                New
                            </button>*@
                        <table id="userDatatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Family</th>
                                    <th>UserName</th>
                                    @*
        <th>Pass</th>*@
                                    <th>Role</th>
                                    <th>expireDate</th>
                                    <th>Image</th>
                                    <th>sys</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                        </table>
                    </div>

                </div>

            </div>
        </div>


    </div>
    <div id="recordDetail" class="row justify-content-center">



        <div class="col-lg-7 col-12">
            <div class="portlet box border shadow">

                <div class="portlet-body">




                    <div class="row">

                        <div class="col-12">
                            <div class="tab-content">
                                <div class="tab-pane active" id="tab23">
                                    <fieldset >
                                        <input type="hidden" id="hfId" />
                                        <form id="form1" action="users" method="POST" role="form">

                                            <div class="row">

                                                <div class="col-md-6 col-12">
                                                    <div class="form-group">
                                                        <label>Name</label>
                                                        <div class="input-group">
                                                            <input type="text" class="form-control" placeholder="Name" id="txtName">
                                                        </div><!-- /.input-group -->
                                                    </div><!-- /.form-group -->
                                                </div>

                                                <div class="col-md-6 col-12">
                                                    <div class="form-group">
                                                        <label>Family</label>
                                                        <div class="input-group">
                                                            <input type="text" class="form-control" placeholder="Family" id="txtFamily">
                                                        </div><!-- /.input-group -->
                                                    </div><!-- /.form-group -->
                                                </div>

                                                <div class="col-md-6 col-12">
                                                    <div class="form-group">
                                                        <label>UserName</label>
                                                        <div class="input-group">
                                                            <input type="text" class="form-control" placeholder="UserName" id="txtUserName"  minlength="3" required>
                                                        </div><!-- /.input-group -->
                                                    </div><!-- /.form-group -->
                                                </div>

                                                <div class="col-md-6 col-12">
                                                    <div class="form-group">
                                                        <label>Password</label>
                                                        <div class="input-group">
                                                            <input type="password" autocomplete="new-password" placeholder="Password" id="txtPass" minlength="5"  class="form-control" required>
                                                        </div><!-- /.input-group -->
                                                    </div><!-- /.form-group -->
                                                </div>





                                                <div class=" col-md-6  col-12">
                                                    <div class="form-group">
                                                        <label>Date of Expire</label>
                                                        <div class="input-group">

                                                            <span class="input-group-addon" onclick="show_Picker3()">
                                                                <i class="icon-calendar"></i>
                                                            </span>

                                                            <input id="txtexpireDate" type="date" min="2022-01-01" max="2099-12-31" class="form-control" placeholder="Date of Expire" onfocus="this.showPicker()" required>
                                                        </div><!-- /.input-group -->
                                                    </div><!-- /.form-group -->
                                                </div>

                                                <div class="col-md-6 col-12 d-none">
                                                    <div class="form-group">
                                                        <label>Role</label>
                                                        <div class="input-group">
                                                            <select class="form-control select2 curve" id="cmbRole">
                                                                <option value="Admin">Admin</option>
                                                                <option value="Supervisor">Supervisor</option>
                                                                <option value="User">User</option>
                                                            </select>
                                                        </div><!-- /.input-group -->
                                                    </div><!-- /.form-group -->
                                                </div>

                                                <div class="col-md-6 col-12">
                                                    <div class="form-group">
                                                        <label>Image</label>
                                                        <div class="input-group" style="display:none">
                                                            <input type="text" class="form-control" placeholder="img" id="txtimg">
                                                        </div><!-- /.input-group -->

                                                        <div class="input-group">

                                                            <div class="row">
                                                                <div class="col-md-8 col-12 ">
                                                                    <button style="min-width:120px" id="upfile1" type="button" class="text-success btn btn-info  btn-sm me-2  " onclick="openMyFileDialog('fileUpl');" style="cursor:pointer;">
                                                                        <i class="fa fa-upload text-primary"></i>

                                                                        Choose File
                                                                    </button>
                                                                    <input class="FuncUploadFiles" style="display:none" id=fileUpl accept="image/*" name="uploadF2" type="file" />


                                                                    <progress id=fileProgress style="display: none"></progress>

                                                                </div>

                                                                <div class="col-md-4 col-12 ">

                                                                    <img id=imgP style="max-width:80px;min-width:80px;height:auto;" />
                                                                </div>

                                                            </div>





                                                        </div>




                                                    </div><!-- /.form-group -->
                                                </div>




                                                <div class="form-actions text-center mt-3">


                                                    <button id="btnSave1" type="button" class="btn btn-success btn-curve">
                                                        <i class="icon-check"></i>
                                                        Confrim
                                                    </button>
                                                    <button id="btnCancel1" type="button" class="btn btn-danger btn-curve ms-2">
                                                        Cancel
                                                        <i class="icon-close"></i>
                                                    </button>
                                                </div>


                                            </div>
                                        </form>
                                    </fieldset>
                                </div><!-- /.tab-pane -->


                            </div><!-- /.tab-content -->
                        </div><!-- /.col-9 -->
                    </div><!-- /.row -->



                </div><!-- /.portlet-body -->
            </div><!-- /.portlet -->
        </div><!-- /.col-lg-8 -->

    </div>


</div><!-- /#page-content -->

